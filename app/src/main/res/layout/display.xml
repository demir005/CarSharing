<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/TVUsername"
        android:layout_weight="1"
        android:text="@string/emptyString"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <Button
        android:text="Vidi sve oglase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pregled"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_oglas"
        android:layout_alignStart="@+id/btn_oglas" />

    <Button
        android:text="Postavi Oglas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_oglas"
        android:layout_above="@+id/btn_pregled"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginBottom="22dp" />


</RelativeLayout>
